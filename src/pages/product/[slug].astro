  size: string;
  brand: string;
  location: string;
  image: string;
  description: string;
  slug: string;
  wash: string;
  condition: string;
  fit: string;
};

import Productcard from "../../components/productcard.astro";
import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/banner.astro";

