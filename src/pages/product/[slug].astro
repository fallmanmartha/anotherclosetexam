  }

  .location {
    background: #e3e3e3;
    display: inline-block;
    padding: 5px 10px;
    border-radius: 3px;
    margin-bottom: 1.5rem;
    font-size: 20px;
    margin-top: 0px;
    font-style: normal;
  }

  .location:hover {
    text-decoration: underline;
  }

  .description {
    line-height: 1.5;
    margin-bottom: 2.5rem;
    max-width: 40ch;
    margin-top: -13px;
  }

  .noresult {
    font-style: italic;
    margin-top: 2rem;
    font-size: 1rem;
  }

  @media (min-width: 700px) {
    .grid_1-1 {
      align-items: start;
      margin-top: 40px;
      max-width: 1050px;
      margin: 0 auto; /* centrera hela grid-blocket */
    }
  }
</style>
