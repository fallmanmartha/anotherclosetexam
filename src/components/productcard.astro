---
const { data } = Astro.props;
---

<a href={`/product/${data.slug}`} class="productlink">
  <div class="productcard">
    <div class="hoverimage">
      <img src={data.image} alt={data.title} class="productimg front" />
      <img src={data.hoverimage} alt={data.title} class="productimg back" />
    </div>
    <h3 class="producttitle"><em>{data.title}</em></h3>
    <div class="infobox">
      <p class="productinfo"><strong>{data.size}</strong>, {data.brand}</p>
      <span class="productlocation">{data.location}</span>
    </div>
  </div>
</a>

<style>
  .hoverimage {
    position: relative;
    width: 100%;
    height: auto;
  }

  .productimg {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .front {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    opacity: 1;
  }

  .back {
    position: relative;
    z-index: 1;
    opacity: 1;
  }

  .hoverimage:hover .front {
    opacity: 0;
  }

  .productlink {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .productlink:hover {
    transform: translateY(-2px);
  }

  .productcard {
    max-width: 190px;
    overflow: hidden;
    transition: box-shadow 0.2s ease;
  }

  .productcard:hover {
  }

  .productimg {
    width: 190px;
    height: 270px;
    object-fit: cover;
    border-radius: 3px;
  }

  .producttitle {
    font-size: 24px;
    margin: 10px 0px 5px;
  }

  .infobox {
    padding: 0 0px 15px;
  }

  .productinfo {
    margin: 5px 0;
    font-style: normal;
  }

  .productlocation {
    font-size: 16px;
    border-radius: 4px;
    padding: 3px 10px;
    display: inline-block;
    background-color: #e3e3e3;
    font-style: normal;
  }

  @media (min-width: 768px) {
    .productimg {
      width: 290px;
      height: 390px;
    }

    .productcard {
      max-width: 315px;
    }
  }
</style>
